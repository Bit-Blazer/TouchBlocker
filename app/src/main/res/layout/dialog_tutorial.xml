<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="24dp"
      android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to Use Touch Blocker"
        android:textColor="@color/on_surface"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ Locking Screen"
            android:textColor="@color/on_surface"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap &quot;Enable Touch Blocker&quot; to lock your screen and prevent accidental touches. Perfect for watching videos or letting kids use your phone safely."
            android:textColor="@color/on_surface_variant"
            android:textSize="15sp"
            android:lineHeight="22sp" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â­• Circle Gesture (Default)"
            android:textColor="@color/on_surface"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Draw a circle on the screen to reveal the unlock button. This method is child-safe as toddlers are unlikely to draw a perfect circle."
            android:textColor="@color/on_surface_variant"
            android:textSize="15sp"
            android:lineHeight="22sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Draw a circular path\nâ€¢ Close the loop near where you started\nâ€¢ Feel the vibration when recognized\nâ€¢ Your drawing path is shown in white"
            android:textColor="@color/on_surface_variant"
            android:textSize="14sp"
            android:lineHeight="20sp"
            android:fontFamily="monospace" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘† Three Taps (Alternative)"
            android:textColor="@color/on_surface"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable &quot;Use simple unlock&quot; in settings to switch to 3-tap mode. Simply tap anywhere on the screen 3 times quickly to reveal the unlock button."
            android:textColor="@color/on_surface_variant"
            android:textSize="15sp"
            android:lineHeight="22sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Tap 3 times within half a second\nâ€¢ Feel the vibration when recognized\nâ€¢ Faster but less child-safe"
            android:textColor="@color/on_surface_variant"
            android:textSize="14sp"
            android:lineHeight="20sp"
            android:fontFamily="monospace" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš¡ Quick Access"
            android:textColor="@color/on_surface"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Quick Settings Tile: Add from notification shade\nâ€¢ App Shortcut: Long-press app icon\nâ€¢ Both enable blocker instantly"
            android:textColor="@color/on_surface_variant"
            android:textSize="15sp"
            android:lineHeight="22sp"
            android:fontFamily="monospace" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tutorial_got_it_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Got it!"
        android:backgroundTint="@color/accent"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="12dp" />

  </LinearLayout>

</ScrollView>
